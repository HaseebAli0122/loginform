<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_Summary"
        android:text="Medicine Name"
        android:textStyle="bold"
        android:id="@+id/MedicineNameinOrderSummary"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_Summary"
        android:layout_toRightOf="@+id/MedicineNameinOrderSummary"
        android:text="x"
        android:textStyle="bold"
        android:id="@+id/quantityinOrderSummary"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasQuality"
        android:textStyle="italic"

        android:layout_marginLeft="20dp"
        android:layout_below="@id/MedicineNameinOrderSummary"
        android:text="Quality"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hasQuality"
        android:id="@+id/hasGuarantee"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/MedicineNameinOrderSummary"
        android:text="Guarantee"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="$10"
        android:id="@+id/priceinOrderSummary"
        android:layout_marginRight="10dp"/>



</RelativeLayout>
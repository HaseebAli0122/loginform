<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_search"
    android:background="@drawable/back2"
    android:padding="24dp"
    android:orientation="vertical">


    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/pic"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Medicine "
        android:textStyle="bold"
        android:textColor="#166019"
        android:textSize="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quality Quarntied"
        android:textStyle="italic"
        android:textSize="22dp"
        android:textColor="#FBC02D"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If You want to Search About our business then below is a Button which will help You to search about our medicine "
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:text="Click Here to Search"
        android:textColor="@color/black"
        android:id="@+id/btn_combine"
        android:textSize="15dp"
        android:background="@drawable/buttoncolour"
        />

</LinearLayout>